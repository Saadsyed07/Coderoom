<header>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  
    <style>
      * {
        box-sizing: border-box;
      }
  
      body {
        padding: 0;
        margin: 0;
        background: #131417;
      }
  
      h, h1 {
        font-size: 2.4em;
        font-weight: 650;
        font-family: 'Source Code Pro', sans-serif;
        line-height: 1.1;
        color: white;
      }
  
      h1 {
        font-size: 1.3em;
        font-weight: 600;
      }
  
      .main {
        position: relative;
        top: 75px;
      }
  
      p {
        font-size: 1em;
        font-weight: 500;
        color: #c7c9d3;
        font-family: 'Open Sans', sans-serif;
      }
  
      a {
        text-decoration: none;
        color: #76daff;
      }
  
      header {
        padding: 10px 20px;
        width: 100%;
        display: flex;
        justify-content: space-between;
      }
  
      header>a {
        color: #008819;
      }
  
      #logo {
        height: 50px;
        width: 50px;
      }
  
      #big-logo {
        height: 100px;
        width: 296px;
        display: block;
        font-size: 60px;
        text-align: center;
        margin-left: 184px;
      }
  
      .signup {
        height: 40px;
        width: auto;
        padding: 10px;
        background-color: #47cf73;
        border: none;
        border-radius: 5px;
        color: black;
        font-weight: 550;
      }
  
      #input-search.search-query {
        border: none;
        border-radius: 5px;
        background-color: #717790;
        color: white;
      }
  
      .description {
        height: 90vh;
        width: 100%;
        max-width: 1200px;
        padding: 0 2rem;
        margin: 0 auto;
        position: relative;
        display: block;
      }
  
      #right {
        margin-top: 400px;
        bottom: auto;
        width: 750px;
        float: right;
        margin-right: 90px;
        position: absolute;
        visibility: visible;
      }
  
      .column {
        width: 65%;
        margin: 0 auto;
        height: 75vh;
        padding: 20px;
        text-align: center;
      }
  
      .row:after {
        content: "";
        display: table;
        clear: both;
      }
  
      .editor {
        height: 70%;
        width: 80%;
        border-radius: 10px;
        background: linear-gradient(109.61deg, #4c4f5a 4.26%, #202125 84.84%);
        margin: 20px;
        right: 0;
        float: right;
      }
  
      .editor-template {
        height: 140px;
        width: 300px;
        background: #1d1e22;
        border-radius: 6px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
        right: 0;
        float: right;
        margin-top: -20px;
        margin-bottom: 25px;
        margin-right: 50px;
      }
  
      .editor-template:nth-child(2) {
        margin-right: 0;
      }
  
      .editor-template:nth-child(3) {
        margin-right: 80px;
        margin-bottom: 0px;
      }
  
      .title {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 20px;
      }
  
      .title>div {
        width: auto;
      }
  
      .title>div:nth-child(3) {
        float: right;
        padding-right: 5px;
        margin-left: auto;
      }
  
      a span {
        font-size: 23px;
      }
  
      .text-6xl {
        font-size: 50px;
        margin-top: 13px;
      }
  
      @media screen and (max-width: 1200px) {
        #big-logo {
          margin-left: auto;
          margin-right: auto;
          width: 500px;
        }
  
        .column {
          width: 102%;
        height: auto;
        padding: 100px;
        font-size: 23px;
        margin-top: 50%;
        }
  
        .editor {
          width: 90%;
          margin: 10px auto;
        }
        .signup {
          font-size: 22px;
        font-family: sans-serif;
        width: 225px;
        height: 67px;
        padding: 9px 35px;
        margin: 8px;
        }
      }
  
      @media screen and (max-width: 768px) {
        .column {
          width: 100%;
          height: auto;
          padding: 10px;
        }
  
        .editor {
          width: 100%;
          margin: 10px auto;
        }
  
        .editor-template {
          width: 100%;
          margin-right: 0;
          margin-bottom: 10px;
        }
  
        #right {
          display: none;
        }
      }
  
      @media screen and (max-width: 480px) {
        h, h1 {
          font-size: 1.5em;
        }
  
        p {
          font-size: 0.9em;
        }
  
        .signup {
          width: 100%;
        }
  
        .description {
          padding: 0 1rem;
        }
      }
    </style>
