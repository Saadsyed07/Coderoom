<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

</head>
<body class="bg-gray-900 text-gray-100">
    <nav class="w-full border-b h-12 mb-5 flex justify-between items-center bg-gray-800 shadow-lg px-4">
        <div class="flex space-x-4">
            <a href="/start" style="color: #76daff;" class="text-xl  font-serif text-white">C<span class="material-symbols-outlined relative top-1">deployed_code</span>deroom</a>
            <a href="/start" class="text-white hover:text-gray-300 transition duration-300">Home</a>
            <a href="/projects" class="text-white hover:text-gray-300 transition duration-300">Projects</a>
        </div>
    </nav>

    <div class="container mx-auto">
        <h1 class="text-3xl mb-6 text-center">Projects</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% projects.forEach(project => { %>
                <div class="border p-4 rounded-lg shadow-lg bg-gray-800">
                    <h2 class="text-xl font-semibold mb-2"><%= project.project_name %></h2>
                    <div class="flex space-x-2">
                        <!-- Link to open the project in Coderoom -->
                        <a href="/open/<%= project.project_name %>" class="border border-blue-700 bg-blue-700 text-black px-4 py-2 rounded hover:bg-blue-600 transition duration-300">Open with Coderoom</a>
                        <!-- Form to delete the project -->
                        <form action="/delete/<%= project.project_name %>" method="POST">
                            <button type="submit" class="border border-red-700 bg-red-700 text-white px-4 py-2 rounded hover:bg-red-600 transition duration-300">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </div>
</body>
</html>
